<table class="u-full-width">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
      <th>Assigned To</th>
      <th></th>
    </tr>
  </thead>
  <tbody hx-confirm="Are you sure?" hx-target="closest tr" hx-swap="outerHTML swap:1s">
    {% for item in items %}
      <tr>
        <td>{{ item.id }}</td>
        <td>{{ item.title }}</td>
        <td>{{ item.status }}</td>
        <td>{{ item.assigned_to.name }}</td>
        <td>
          <button class="button warning">Postpone</button>
          <button class="button button-primary">Resolve</button>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>